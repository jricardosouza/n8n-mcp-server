# n8n API Configuration
N8N_API_URL=http://localhost:5678/api/v1
N8N_API_KEY=your-n8n-api-key-here

# Server Configuration (optional)
# PORT=3000
# LOG_LEVEL=info

# n8n Authentication (choose one method)
# Method 1: API Key (recommended)
# N8N_API_KEY=n8n_api_xxxxxxxxxxxxx

# Method 2: Basic Auth (legacy)
# N8N_USERNAME=admin
# N8N_PASSWORD=your-password

# Advanced Settings
# REQUEST_TIMEOUT=30000
# MAX_RETRIES=3

# Network Security Settings
# VALIDATE_SSL=true                    # Validate SSL certificates (default: true)
# MAX_RESPONSE_SIZE=10485760           # Max response size in bytes (default: 10MB)
# MAX_REQUEST_SIZE=5242880             # Max request size in bytes (default: 5MB)
