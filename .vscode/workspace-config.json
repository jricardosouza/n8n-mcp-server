{
  "version": "1.0.0",
  "name": "n8n-mcp-server-workspace",
  "description": "Workspace configuration for N8N MCP Server development",
  "settings": {
    "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["--line-length", "88"],
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "files.exclude": {
      "**/__pycache__": true,
      "**/.venv": true,
      "**/venv": true,
      "**/.env": true,
      "logs": true
    },
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": ["tests"],
    "python.analysis.typeCheckingMode": "basic",
    "terminal.integrated.env.osx": {
      "N8N_API_URL": "${config:N8N_API_URL}",
      "N8N_API_KEY": "${config:N8N_API_KEY}"
    },
    "mcp.server.entrypoint": "src/n8n_mcp_server.py",
    "mcp.server.envFile": "${workspaceFolder}/.env",
    "claude.enableCodeLens": true,
    "claude.enableInlineCompletion": true,
    "claude.enableContextualHelp": true,
    "claude.codeComments.enabled": true,
    "claude.codeComments.style": "detailed",
    "claude.snippets.language": ["python", "markdown", "json"],
    "claude.workspace.scanOnStartup": true,
    "claude.workspace.includeGitIgnored": false,
    "claude.logging.level": "info"
  },
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance",
    "anthropic.claude-code",
    "eamodio.gitlens",
    "dbaeumer.vscode-eslint",
    "esbenp.prettier-vscode"
  ],
  "tasks": [
    {
      "label": "Run N8N MCP Server",
      "type": "shell",
      "command": "${workspaceFolder}/venv/bin/python ${workspaceFolder}/src/n8n_mcp_server.py",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Install requirements",
      "type": "shell",
      "command": "${workspaceFolder}/venv/bin/python -m pip install -r ${workspaceFolder}/requirements.txt",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    }
  ],
  "launch": {
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run N8N MCP Server",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/src/n8n_mcp_server.py",
        "console": "integratedTerminal",
        "envFile": "${workspaceFolder}/.env",
        "justMyCode": false
      }
    ]
  }
}